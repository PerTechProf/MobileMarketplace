<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".user.AddressFragment"
    android:background="@color/background"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <EditText
        android:id="@+id/homeAddressEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/grayborderinv"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789,.@"
        android:fontFamily="@font/source_sans_pro"
        android:hint="Почта"
        android:inputType="text"
        android:padding="10dp"
        android:textColorHint="@color/textcolor"
        />

    <EditText
        android:id="@+id/houseAddressEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="190dp"
        android:background="@drawable/grayborderinv"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789,."
        android:fontFamily="@font/source_sans_pro"
        android:hint="@string/password"
        android:inputType="text"
        android:padding="10dp"
        android:textColorHint="@color/textcolor"
        app:layout_constraintTop_toBottomOf="@id/homeAddressEdit"
        android:autofillHints="" />

    <EditText
        android:id="@+id/cityAddressEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/grayborderinv"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789,."
        android:fontFamily="@font/source_sans_pro"
        android:hint="@string/password"
        android:inputType="text"
        android:padding="10dp"
        android:textColorHint="@color/textcolor"
        app:layout_constraintTop_toBottomOf="@id/homeAddressEdit"
        android:autofillHints="" />


