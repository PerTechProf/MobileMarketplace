<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginStart="15dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/gray_item">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/round_outline_rect"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nameItem"
        android:layout_width="195dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/source_sans_pro"
        android:lines="2"
        android:text="NameItems"
        android:textAlignment="viewStart"
        android:textColor="@color/textcolor"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/cart_product_delete_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="85dp"
        android:background="@drawable/round_button"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nameItem"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_delete_24"
        app:tint="@color/gray" />

    <TextView
        android:id="@+id/price_staff"
        android:layout_width="101dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/source_sans_pro"
        android:text="Price Staff"
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintTop_toBottomOf="@+id/nameItem"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/quantity_text"
        android:layout_width="101dp"
        android:layout_height="24dp"
        android:layout_marginStart="116dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/source_sans_pro"
        android:text="Количество: "
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintTop_toBottomOf="@+id/nameItem"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/quantity"
        android:layout_width="50dp"
        android:layout_height="24dp"
        android:layout_marginStart="220dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/source_sans_pro"
        android:text="0"
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintTop_toBottomOf="@+id/nameItem"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>