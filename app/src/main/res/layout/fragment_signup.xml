<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup.SignupFragment"
    android:background="@color/background"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Создание аккаунта"
        android:textSize="40dp"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/textcolor"
        android:background="@drawable/graybordertop"/>

    <EditText
        android:id="@+id/loginEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:background="@drawable/grayborderinv"
        android:hint="Логин"
        android:textColorHint="@color/textcolor"
        android:padding="15dp"
        android:layout_marginHorizontal="31dp"
        android:layout_marginTop="18dp"/>

    <EditText
        android:id="@+id/emailEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:background="@drawable/grayborderinv"
        android:hint="Почта"
        android:textColorHint="@color/textcolor"
        android:padding="15dp"
        android:layout_marginHorizontal="31dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/passwordEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:background="@drawable/grayborderinv"
        android:hint="Пароль"
        android:textColorHint="@color/textcolor"
        android:padding="15dp"
        android:layout_marginHorizontal="31dp"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/repasswordEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:background="@drawable/grayborderinv"
        android:hint="Повтоорите Пароль"
        android:textColorHint="@color/textcolor"
        android:padding="15dp"
        android:layout_marginHorizontal="31dp"
        android:layout_marginTop="10dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Зарегистрироваться"
        android:textColor="@color/textcolor"
        android:background="@drawable/grayborder"
        android:layout_marginHorizontal="31dp"
        android:layout_marginTop="44dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="У меня уже есть аккаунт"
        android:onClick="signin"
        android:textColor="@color/textcolor"
        android:background="@drawable/grayborder"
        android:layout_marginHorizontal="31dp"
        android:layout_marginTop="10dp"/>

</LinearLayout>